generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  name     String
  password String

  profile UserProfile?
}

model UserProfile {
  id                String   @id @default(uuid())
  userId            String   @unique
  title             String
  location          String
  yearsOfExperience Int
  experienceLevel   String
  bio               String
  remotePreference  String
  skills            String[] 
  preferredJobTypes String[] 

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Job {
  id               Int      @id @default(autoincrement())
  title            String
  company          String
  location         String
  type             String // e.g., Full-time, Part-time, Contract
  experience       String
  remote           Boolean
  hybrid           Boolean
  description      String
  responsibilities String[] // Stored as a string array
  requirements     String[] // Stored as a string array
  benefits         String[] // Stored as a string array
  skills           String[] // Stored as a string array
}
